<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ventanaAcercade"
    android:layout_width="wrap_content"
    android:background="@color/c_blanco_1000"
    android:layout_height="wrap_content"
    android:weightSum="1">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/c_text"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:background="@color/c_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imagenAcercade"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="0.50"
        android:adjustViewBounds="false"
        android:contentDescription="@string/acercaDe"/>

    <TextView
        android:id="@+id/textViewAboutDialogDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/desc_acercaDe"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/c_secondary_text_icons"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/versionAppLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/app_version"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="?attr/colorAccent"
        android:textColorLink="?attr/colorAccent"
        android:layout_gravity="center_horizontal"
       />

</LinearLayout>